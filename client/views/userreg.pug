extend layout
block content
    form.regform(method='POST' action='/registration')
        h1.headerreg.text-center User Registration
        // register form
    
        label(for='FirstName') First Name:
        input#FirstName.form-control(type='text', placeholder='first name' name='FirstName')

        label(for='LastName') Last Name:
        input#LastName.form-control(type='text', placeholder='last name' name='LastName')

        label(for='Address') Address:
        input#address.form-control(type='text', placeholder='address' name='Address')

        label(for='City') City:
        input#City.form-control(type='text', placeholder='City' name='City')

        label(for='State') State:
        input#State.form-control(type='text', placeholder='State' name='State')

        label(for='Zip') Zip Code:
        input#zip.form-control(type='zip' placeholder='Zip Code' name='ZipCode')

        label(for='jobtitle') Company Position:
        input#CompanyPosition.form-control(type='companytitle' placeholder='Company Position' name='CompanyPosition')

        label(for='Email') Email Address:
        input#Email.form-control(type='email' placeholder='Email Address' name='Email')

        label(for='pw') Password:
        input#pw.form-control(type='password' placeholder='Password' name='Password')

        label(for='pw2') Password Confirmation:
        input#CPW.form-control(type='password' placeholder='Password Confirmation' name='PasswordConfirmation')
        button.btn.btn-primary(type='submit') Sign up